{% extends "::base.html.twig" %}

{% block head_javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/paulmaxwellblog/js/ajax.js') }}"></script>
{% endblock %}

{% block title %}{{ 'paul_maxwell_blog.title'|trans }}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'paul_maxwell_blog.title'|trans }}</h1>
    </div>
    <div class="navbar navbar-default">
        <ul class="nav navbar-nav navbar-left">
            {{ main_menu(
                {'route': 'paul_maxwell_blog_homepage', 'text': 'paul_maxwell_blog.main_menu.home'},
                {'route': 'paul_maxwell_blog_aboutme', 'text': 'paul_maxwell_blog.main_menu.about_me'}
            ) }}
        </ul>
        <form class="navbar-form navbar-right" method="get" target="_self" action="{% if route_settings is defined %}{{ url(app.request.attributes.get('_route'), route_settings) }}{% else %}{{ url('paul_maxwell_blog_homepage') }}{% endif %}">
            <div class="form-group">
                <input name="search" type="text" class="form-control" placeholder="{{ 'paul_maxwell_blog.search'|trans }}" value="{% if search_term is defined %}{{ search_term }}{% endif %}">
            </div>
            <button type="submit" class="btn btn-default">{{ 'paul_maxwell_blog.search'|trans }}</button>
        </form>
    </div>
{% endblock %}
