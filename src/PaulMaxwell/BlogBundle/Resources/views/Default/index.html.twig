{% extends "PaulMaxwellBlogBundle::layout.html.twig" %}

{% block body %}
    {{ parent() }}
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" id="articles-container" style="padding-left: 0;">
        {% if enableShowPrevious is defined and enableShowPrevious and articles|length > 0 %}
            <div style="margin-bottom: 20px;">
                <a id="blog_show_previous" class="btn btn-default col-md-12" href="{{ url(app.request.attributes.get('_route'), route_settings|merge({'before_id': articles|first.id})) }}">{{ 'paul_maxwell_guestbook.show_previous'|trans }}</a>
            </div>
        {% endif %}
        {{ include('PaulMaxwellBlogBundle:Default:_articles.html.twig', {
            'articles': articles,
            'category': category,
            'route_settings': route_settings,
        }) }}
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="padding-right: 0;">
        {{ render(controller('PaulMaxwellBlogBundle:Default:partialSidebar')) }}
    </div>
{% endblock body %}
