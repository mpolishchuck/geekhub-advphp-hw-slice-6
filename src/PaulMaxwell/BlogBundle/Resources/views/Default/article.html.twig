{% extends "PaulMaxwellBlogBundle::layout.html.twig" %}

{% block body %}
    {{ parent() }}
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" style="padding-left: 0;">
        <div class="panel panel-default">
            <div class="panel-heading">{{ article.title }}</div>
            <div class="panel-body">
                {{ article.body|fix_img_tags }}
            </div>
        </div>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="padding-right: 0;">
        {{ render(controller('PaulMaxwellBlogBundle:Default:partialSidebar')) }}
    </div>
{% endblock body %}
